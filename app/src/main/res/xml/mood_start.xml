<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Avatar invisible + scaled down -->
    <View android:id="@+id/userAvatar"
        android:alpha="0"
        android:scaleX="0.6"
        android:scaleY="0.6"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Greetings & Name initially hidden -->
    <View android:id="@+id/userName"
        android:alpha="0"
        android:translationY="40dp"/>

    <View android:id="@+id/userName2"
        android:alpha="0"
        android:translationY="40dp"/>

    <!-- Question text opacity + scale -->
    <View android:id="@+id/questionText"
        android:alpha="0"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:translationY="30dp"/>

    <!-- Emoji list slides from bottom -->
    <View android:id="@+id/moodEmoji"
        android:alpha="0"
        android:translationY="80dp"/>

    <!-- Button bounce-in -->
    <View android:id="@+id/selectMoodButton"
        android:alpha="0"
        android:translationY="100dp"
        android:scaleX="0.9"
        android:scaleY="0.9"/>

</androidx.constraintlayout.widget.ConstraintLayout>
