<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Avatar final position -->
    <View android:id="@+id/userAvatar"
        android:alpha="1"
        android:scaleX="1"
        android:scaleY="1"/>

    <View android:id="@+id/userName"
        android:alpha="1"
        android:translationY="0dp"/>

    <View android:id="@+id/userName2"
        android:alpha="1"
        android:translationY="0dp"/>

    <!-- Question text -->
    <View android:id="@+id/questionText"
        android:alpha="1"
        android:scaleX="1"
        android:scaleY="1"
        android:translationY="0dp"/>

    <!-- Mood Emoji -->
    <View android:id="@+id/moodEmoji"
        android:alpha="1"
        android:translationY="0dp"/>

    <!-- Button -->
    <View android:id="@+id/selectMoodButton"
        android:alpha="1"
        android:scaleX="1"
        android:scaleY="1"
        android:translationY="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
