<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vitalType"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F7FB">

        <!-- Top App Bar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@android:color/white"
            app:navigationIcon="@drawable/ic_back"
            app:title="Add Glucose Level"
            android:elevation="8dp"
            app:titleTextColor="#000000"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card : Glucose value -->

        <LinearLayout
            android:id="@+id/cardGlucose"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:visibleIf="@{vitalType.equals(`Glucose`)}"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_card_white"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <ImageButton
                    android:id="@+id/btnMinus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_light"
                    android:src="@drawable/ic_minus"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/tvGlucoseValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="110"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:clickable="true"
                    android:focusable="true" />

                <EditText
                    android:id="@+id/etHiddenInput"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:inputType="number"
                    android:visibility="invisible"
                    android:imeOptions="actionDone" />

                <ImageButton
                    android:id="@+id/btnPlus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_light"
                    android:src="@drawable/ic_add"
                    android:scaleType="center"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_glucose" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Blood Glucose Level (mg/dL)"
                    android:textColor="#808C9A"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardBloodPressure"
            android:layout_width="0dp"
            app:visibleIf="@{vitalType.equals(`Blood Pressure`)}"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_card_white"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/cardGlucose"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/cardSystolic"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_card_white"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageButton
                        android:id="@+id/btnMinusSystolic"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_circle_light"
                        android:src="@drawable/ic_minus"
                        android:scaleType="center"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:id="@+id/tvSystolicValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="110"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:clickable="true"
                        android:focusable="true" />

                    <EditText
                        android:id="@+id/etHiddenInputSystolic"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:inputType="number"
                        android:visibility="invisible"
                        android:imeOptions="actionDone" />

                    <ImageButton
                        android:id="@+id/btnPlusSystolic"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_circle_light"
                        android:src="@drawable/ic_add"
                        android:scaleType="center"
                        android:contentDescription="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_glucose" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Systolic (mmHg)"
                        android:textColor="#808C9A"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                app:dividerColor="@color/greyBG"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/cardDystolic"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_card_white"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageButton
                        android:id="@+id/btnMinusDystolic"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_circle_light"
                        android:src="@drawable/ic_minus"
                        android:scaleType="center"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:id="@+id/tvDystolicValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="80"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:clickable="true"
                        android:focusable="true" />

                    <EditText
                        android:id="@+id/etHiddenInputDystolic"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:inputType="number"
                        android:visibility="invisible"
                        android:imeOptions="actionDone" />

                    <ImageButton
                        android:id="@+id/btnPlusDystolic"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_circle_light"
                        android:src="@drawable/ic_add"
                        android:scaleType="center"
                        android:contentDescription="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_glucose" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Diastolic (mmHg)"
                        android:textColor="#808C9A"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Select status title -->
        <TextView
            android:id="@+id/tvSelectStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Select Current Status"
            android:textColor="#1A1A1A"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardBloodPressure" />

        <!-- Status chips card -->
        <HorizontalScrollView
            android:id="@+id/statusScroll"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/tvSelectStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/bg_card_white"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <!-- Fasting - selected -->
                <LinearLayout
                    android:id="@+id/itemFasting"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@android:color/transparent">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_chip_icon_selected"
                        android:padding="10dp"
                        android:src="@drawable/ic_fasting" />

                    <TextView
                        android:id="@+id/tvFasting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Fasting"
                        android:textColor="#007BFF"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- Pre Meal -->
                <LinearLayout
                    android:id="@+id/itemPreMeal"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_chip_icon_unselected"
                        android:padding="10dp"
                        android:src="@drawable/ic_pre_meal" />

                    <TextView
                        android:id="@+id/tvPreMeal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Pre Meal"
                        android:textColor="#A0A6B3"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- Post Meal -->
                <LinearLayout
                    android:id="@+id/itemPostMeal"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_chip_icon_unselected"
                        android:padding="10dp"
                        android:src="@drawable/ic_post_meal" />

                    <TextView
                        android:id="@+id/tvPostMeal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Post Meal"
                        android:textColor="#A0A6B3"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- Random -->
                <LinearLayout
                    android:id="@+id/itemRandom"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_chip_icon_unselected"
                        android:padding="10dp"
                        android:src="@drawable/ic_random" />

                    <TextView
                        android:id="@+id/tvRandom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Random"
                        android:textColor="#A0A6B3"
                        android:textSize="11sp" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Bottom button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddReading"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            android:text="Add Reading"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="#007BFF"
            app:cornerRadius="26dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
