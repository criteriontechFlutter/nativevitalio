<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     app:cardCornerRadius="16dp"
    android:id="@+id/cardViewid"
    app:cardElevation="0dp"
    android:layout_marginEnd="8dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- Gradient background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_progress_track">

        <!-- Title Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconGoal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/octicon_goal"
                android:layout_marginEnd="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glucose Stability Week"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />
                <TextView
                    android:id="@+id/subtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="w/Coach Sarah | 7 days"
                    android:textSize="12sp"
                    android:textColor="#555555"
                    android:layout_marginTop="2dp" />

            </LinearLayout>
        </LinearLayout>


        <!-- Status Message -->
<!--        <TextView-->
<!--            android:id="@+id/statusText"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Almost there!"-->
<!--            android:textSize="15sp"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="#FF6600"-->
<!--            android:layout_marginTop="8dp" />-->

<!--        <TextView-->
<!--            android:id="@+id/targetText"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Target: 70% time-in-range"-->
<!--            android:textSize="13sp"-->
<!--            android:textColor="#333333"-->
<!--            android:layout_marginBottom="12dp" />-->

        <!-- Progress Bar -->
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
         android:orientation="horizontal"
        android:gravity="center"
         android:padding="8dp">

        <!-- Left label (Current) -->
        <TextView
            android:id="@+id/labelCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress 74"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_marginEnd="16dp" />

        <!-- Progress Container -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center">

            <!-- Background Progress Track -->
            <ProgressBar
                android:id="@+id/progressBarBackground"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:layout_centerInParent="true"
                android:indeterminate="false"

                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/progress_background" />

            <!-- Actual Progress -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:max="100"
                android:progress="68"
                android:progressDrawable="@drawable/progress_drawable" />

            <!-- Percentage Text -->
            <TextView
                android:id="@+id/labelPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="68%"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
             android:background="#FFFFFF">

            <!-- Consistency wins! text -->
            <TextView
                android:id="@+id/tvConsistencyWins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consistency wins!"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FF6F07"
                android:layout_marginEnd="16dp" />

            <!-- Day indicators container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="17.dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Monday -->
                <TextView
                    android:id="@+id/tvMonday"
                    android:layout_width="23dp"
                    android:layout_height="32dp"
                    android:text="M"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF6B35"
                    android:gravity="center"
                    android:background="@drawable/day_circle_background"  />

                <!-- Tuesday -->
                <TextView
                    android:id="@+id/tvTuesday"
                    android:layout_width="23dp"
                    android:layout_height="32dp"
                    android:text="T"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF6B35"
                    android:gravity="center"
                    android:background="#FFE5D9"  />

                <!-- Wednesday -->
                <TextView
                    android:id="@+id/tvWednesday"
                    android:layout_width="23dp"
                    android:layout_height="32dp"
                    android:text="W"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF6B35"
                    android:gravity="center"
                    android:background="#FFE5D9"  />

                <!-- Thursday -->
                <TextView
                    android:id="@+id/tvThursday"
                    android:layout_width="23dp"
                    android:layout_height="32dp"
                    android:text="T"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF6B35"
                    android:gravity="center"
                    android:background="#FFE5D9" />

                <!-- Friday -->
                <TextView
                    android:id="@+id/tvFriday"
                    android:layout_width="23dp"
                    android:layout_height="32dp"
                    android:text="F"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FF6B35"
                    android:gravity="center"
                    android:background="#FFE5D9"  />

                <!-- Fire emoji/icon -->
                <TextView
                    android:id="@+id/tvFireIcon"
                    android:layout_width="23dp"
                    android:layout_height="32dp"
                    android:text="ðŸ”¥"
                    android:background="#FFE5D9"
                    android:textSize="20sp"
                    android:gravity="center"  />

                <!-- Saturday -->
                <TextView
                    android:id="@+id/tvSaturday"
                    android:layout_width="23dp"
                    android:layout_height="32dp"
                    android:text="S"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#999999"
                    android:gravity="center"
                    android:layout_marginEnd="0dp" />

            </LinearLayout>

        </LinearLayout>
        <!-- Reminder Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

<!--            <ImageView-->
<!--                android:id="@+id/iconReminder"-->
<!--                android:layout_width="16dp"-->
<!--                android:layout_height="16dp"-->
<!--                android:src="@drawable/clock"-->
<!--                android:layout_marginEnd="6dp" />-->

            <TextView
                android:id="@+id/reminderText"
                android:layout_width="match_parent"
                android:padding="12dp"
                android:layout_height="wrap_content"
                android:background="@drawable/dashboard_rounded_corner"
                android:backgroundTint="#EAF4FF"
                android:text="Tiny push needed â€” one smooth glucose day completes your streak."
                android:textSize="12sp"
                android:textColor="#444444" />
        </LinearLayout>

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <!-- Log Reading Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_log_reading"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Log reading"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                app:icon="@drawable/ic_log"
                app:iconGravity="start"
                app:iconPadding="6dp"
                app:cornerRadius="6dp"
                android:paddingVertical="0dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                app:backgroundTint="#007BFF"
                android:layout_marginEnd="12dp" />

            <!-- Message Coach Button -->


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_message_coach"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Message coach"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="#007BFF"
                app:icon="@drawable/ic_chat"
                app:iconTint="#007BFF"
                app:iconGravity="start"
                app:iconPadding="6dp"
                android:paddingVertical="0dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                app:cornerRadius="6dp"
                app:backgroundTint="@color/greyBG"
                android:paddingHorizontal="20dp"
                android:layout_marginEnd="12dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>