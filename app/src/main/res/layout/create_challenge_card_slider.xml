<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     app:cardCornerRadius="16dp"
    android:id="@+id/cardViewid"
    app:cardElevation="0dp"
    android:layout_marginEnd="8dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- Gradient background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_progress_track">

        <!-- Title Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconGoal"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/octicon_goal"
                android:layout_marginEnd="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glucose Stability Week"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />
                <TextView
                    android:id="@+id/subtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="w/Coach Sarah | 7 days"
                    android:textSize="13sp"
                    android:textColor="#555555"
                    android:layout_marginTop="2dp" />

            </LinearLayout>
        </LinearLayout>


        <!-- Status Message -->
<!--        <TextView-->
<!--            android:id="@+id/statusText"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Almost there!"-->
<!--            android:textSize="15sp"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="#FF6600"-->
<!--            android:layout_marginTop="8dp" />-->

<!--        <TextView-->
<!--            android:id="@+id/targetText"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Target: 70% time-in-range"-->
<!--            android:textSize="13sp"-->
<!--            android:textColor="#333333"-->
<!--            android:layout_marginBottom="12dp" />-->

        <!-- Progress Bar -->
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:gravity="center"
         android:padding="4dp">

        <!-- Left label (Current) -->
        <TextView
            android:id="@+id/labelCurrent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progress 74"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_marginEnd="16dp" />

        <!-- Progress Container -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center">

            <!-- Background Progress Track -->
            <ProgressBar
                android:id="@+id/progressBarBackground"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/progress_background" />

            <!-- Actual Progress -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:max="100"
                android:progress="68"
                android:progressDrawable="@drawable/progress_drawable" />

            <!-- Percentage Text -->
            <TextView
                android:id="@+id/labelPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="68%"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

        <!-- Reminder Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

<!--            <ImageView-->
<!--                android:id="@+id/iconReminder"-->
<!--                android:layout_width="16dp"-->
<!--                android:layout_height="16dp"-->
<!--                android:src="@drawable/clock"-->
<!--                android:layout_marginEnd="6dp" />-->

            <TextView
                android:id="@+id/reminderText"
                android:layout_width="match_parent"
                android:padding="12dp"
                android:layout_height="wrap_content"
                android:text="Next Log post-lunch reading | Due: 2:30 PM (30 minutes)"
                android:textSize="12sp"
                android:textColor="#444444" />
        </LinearLayout>

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <!-- Log Reading Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_log_reading"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Log reading"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                app:icon="@drawable/ic_log"
                app:iconGravity="start"
                app:iconPadding="6dp"
                app:cornerRadius="12dp"
                app:backgroundTint="#007BFF"
                android:paddingHorizontal="20dp"
                android:layout_marginEnd="12dp" />

            <!-- Message Coach Button -->


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_message_coach"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Message coach"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="#007BFF"
                app:icon="@drawable/ic_chat"
                app:iconTint="#007BFF"
                app:iconGravity="start"
                app:iconPadding="6dp"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/greyBG"
                android:paddingHorizontal="20dp"
                android:layout_marginEnd="12dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>