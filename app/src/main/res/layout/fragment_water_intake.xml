<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_water_intake_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        tools:context=".UI.fragments.WaterIntakeFragment">


        <!-- ===================== -->
        <!-- WATER RING HALF VIEW -->
        <!-- ===================== -->

        <FrameLayout
            android:id="@+id/waterRingContainer"
            android:layout_width="84dp"
            android:layout_height="242dp"
            android:clipToPadding="true"
            android:clipToOutline="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.critetiontech.ctvitalio.UI.fragments.WaterRingWaveView
                android:id="@+id/waterRing"
                android:layout_width="168dp"
                android:layout_height="242dp"
                android:translationX="-84dp" />
        </FrameLayout>



        <!-- ===================== -->
        <!-- RIGHT STATS -->
        <!-- ===================== -->

        <LinearLayout
            android:id="@+id/rightColumn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/waterRingContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/waterRingContainer">

            <TextView
                android:id="@+id/tv_total_ml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1100 ml"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1976D2" />

            <TextView
                android:id="@+id/tv_goal_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal 3000 ml"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="#8A8A8A" />

            <TextView
                android:id="@+id/tv_daily_avg_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:textColor="#262626" />

            <TextView
                android:id="@+id/tv_avg_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1100 ml\nAverage Volume"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:textColor="#8A8A8A" />

        </LinearLayout>



        <!-- ===================== -->
        <!-- SELECT GLASS SIZE -->
        <!-- ===================== -->

        <TextView
            android:id="@+id/tv_select_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Your Glass Size"
            android:textSize="14sp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/waterRingContainer"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup_sizes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            app:singleSelection="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_select_label">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_custom"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœŽ"
                android:textSize="14sp"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_150"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150 ml"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_250"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250 ml"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_300"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300 ml"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_400"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400 ml"
                android:checkable="true" />

        </com.google.android.material.chip.ChipGroup>



        <!-- ===================== -->
        <!-- ADD BUTTON -->
        <!-- ===================== -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_intake"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Add Intake"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginTop="18dp"
            android:background="@drawable/rounded_coner_pc"
            app:layout_constraintTop_toBottomOf="@id/chipGroup_sizes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



        <!-- ===================== -->
        <!-- WATER INTAKE LOG -->
        <!-- ===================== -->

        <TextView
            android:id="@+id/tv_water_intake_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water Intake Log"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@id/btn_add_intake"
            app:layout_constraintStart_toStartOf="parent" />



        <!-- ===================== -->
        <!-- BAR CHART -->
        <!-- ===================== -->

        <LinearLayout
            android:id="@+id/chartContainer"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_bg"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_water_intake_log"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/waterBarChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>



        <!-- ===================== -->
        <!-- TODAY RECORD -->
        <!-- ===================== -->

        <TextView
            android:id="@+id/tv_today_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Record"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/chartContainer"
            app:layout_constraintStart_toStartOf="parent" />



        <!-- ===================== -->
        <!-- RECORDS LIST -->
        <!-- ===================== -->

        <LinearLayout
            android:id="@+id/listContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_bg"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_today_record"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false" />

            <LinearLayout
                android:id="@+id/emptyView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <include layout="@layout/view_empty_water_log" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>