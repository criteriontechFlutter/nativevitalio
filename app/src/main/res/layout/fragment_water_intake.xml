<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_water_intake_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@android:color/white"
    tools:context=".UI.fragments.WaterIntakeFragment">

    <!-- Circular ring + percentage -->
    <!-- Replace com.example.widgets.WaterRingView with your custom view that draws the 60% water ring -->

    <!-- Percentage center text (in case custom view doesn't draw it) -->


    <!-- Right column with main numbers and details -->

    <com.critetiontech.ctvitalio.UI.fragments.WaterRingWaveView
        android:id="@+id/waterRing"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:contentDescription="Water progress ring"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/rightColumn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/waterRing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/waterRing"
        android:paddingStart="12dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/tv_total_ml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1100 ml"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1976D2" />

        <TextView
            android:id="@+id/tv_goal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal 3000 ml"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="#8A8A8A" />

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_daily_avg_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:textColor="#262626" />

        <TextView
            android:id="@+id/tv_avg_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1100 ml\nAverage Volume"
            android:textSize="12sp"
            android:layout_marginTop="6dp"
            android:textColor="#8A8A8A" />

    </LinearLayout>

    <!-- 'Select Your Glass Size' label -->
    <TextView
        android:id="@+id/tv_select_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Glass Size"
        android:textSize="14sp"
        android:textColor="#444444"
        app:layout_constraintTop_toBottomOf="@id/waterRing"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp" />

    <!-- Glass size segmented buttons (ChipGroup) -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup_sizes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        app:singleSelection="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_select_label">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_custom"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœŽ"
            android:textSize="14sp"
            android:checkable="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_150"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150 ml"
            android:checkable="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_250"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250 ml"
            android:checkable="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_300"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300 ml"
            android:checkable="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_400"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="400 ml"
            android:checkable="true" />

    </com.google.android.material.chip.ChipGroup>

    <!-- Add Intake button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_intake"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Add Intake"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chipGroup_sizes"
        android:layout_marginTop="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
