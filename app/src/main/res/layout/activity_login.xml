<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBlue"
    android:orientation="vertical">    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/appTitle"
            style="@style/veryLargeWCB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|center_horizontal"
            android:text="Our Smart App!" />

        <TextView
            android:id="@+id/langText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eng â–¾"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>    <!-- Doctor Image -->
    <ImageView
        android:id="@+id/doctorsImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="-40dp"
        android:adjustViewBounds="true"
        android:src="@drawable/doctors" />    <!-- Bottom Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:background="@drawable/only_top_corners"
        android:clipToOutline="true"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                style="@style/veryLargeWCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login/Sign Up"
                android:textColor="@color/primaryBlue" />

            <TextView
                style="@style/mediumBCN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="16dp"
                android:text="Access your health records and services"
                android:textColor="@color/greyText" />

            <TextView
                style="@style/mediumGCN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Enter UHID/Mobile No./Email"
                android:textColor="@color/blackText" />

            <EditText
                android:id="@+id/inputField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_edittext_rounded"
                android:hint="Enter UHID/Mobile No./Email"
                android:padding="12dp" />

<!--            <Button-->
<!--                android:id="@+id/sendOtpBtn"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="12dp"-->
<!--                android:background="@drawable/rounded_corners"-->
<!--                android:backgroundTint="#C4C4C4"-->
<!--                android:enabled="false"-->
<!--                android:text="Send OTP"-->
<!--                android:textColor="#FFFFFF" />-->

            <com.criterion.nativevitalio.Utils.CustomRoundedButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="#C4C4C4"
                android:enabled="false"
                app:strokeWidth="5dp"
                app:strokeColor="@android:color/holo_red_dark"
                android:text="Send OTP"
                android:textColor="#FFFFFF"/>


            <Button
                android:id="@+id/googleLoginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#FFFFFF"
                android:drawableStart="@drawable/arrow_right"
                android:elevation="2dp"
                android:text="Continue with Google"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/termsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="By signing in you agree to our Terms &amp; Conditions and Privacy Policy"
                android:textColor="#808080"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>