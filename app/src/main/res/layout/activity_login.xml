<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainScrollView"
        android:windowSoftInputMode="adjustResize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFDD00"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/upperground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFDD00"
            android:paddingTop="16dp">

            <!-- Top Bar -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />


                <!--                <TextView-->
<!--                    android:id="@+id/appTitle"-->
<!--                    style="@style/veryLargeWCB"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:gravity="center"-->
<!--                    android:text="Our Smart App!"-->
<!--                    app:layout_constraintStart_toEndOf="@id/info"-->
<!--                    app:layout_constraintEnd_toStartOf="@id/langText"-->
<!--                    app:layout_constraintTop_toTopOf="parent"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent" />-->

                <ImageView
                    android:id="@+id/appTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"

                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/vitalio_logo_svg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/langText"
                    app:layout_constraintStart_toEndOf="@id/info"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/langText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eng â–¾"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Doctor Image -->

            <!-- Bottom Card (Login Form) -->
<!--            <ImageView-->
<!--                android:id="@+id/doctorsImage"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="0dp"-->
<!--                android:adjustViewBounds="true"-->
<!--                android:scaleType="fitXY"-->
<!--                android:src="@drawable/doctors"-->
<!--                app:layout_constraintBottom_toTopOf="@id/bottomCard"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintHorizontal_bias="0.0"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@id/topBar"-->
<!--                app:layout_constraintVertical_bias="0.0" />-->
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/doctorsImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                 android:src="@drawable/happygif"
                app:layout_constraintBottom_toTopOf="@id/bottomCard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topBar"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.cardview.widget.CardView
                android:id="@+id/bottomCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:clipToOutline="true"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/only_top_corners"
                    android:backgroundTint="@color/white"
                    android:padding="24dp">

                    <!-- Login Header -->
                    <TextView
                        android:id="@+id/loginTitle"
                        style="@style/veryLargeWCB"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="Login "
                        android:textColor="@color/bgDark"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/loginSubtitle"
                        style="@style/mediumBCN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Access your health records and services"
                        android:textColor="@color/gray"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/loginTitle" />

                    <!-- Input Field -->
                    <TextView
                        android:id="@+id/inputLabel"
                        style="@style/mediumGCN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employee ID"
                        android:textColor="@color/darkGreyText"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/loginSubtitle" />

                    <EditText
                        android:id="@+id/inputField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_rounded"
                        android:hint="Enter Employee ID"
                        android:padding="12dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:textColorHint="@color/loginHintTextColor"
                        android:layout_marginTop="4dp"
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/person_badge"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/inputLabel" />

                    <TextView
                        android:id="@+id/passLabel"
                        style="@style/mediumGCN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="@color/darkGreyText"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/inputField" />

                    <EditText
                        android:id="@+id/passField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_rounded"
                        android:hint="Enter new password"
                        android:padding="12dp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:imeOptions="actionDone"
                        android:textColorHint="@color/loginHintTextColor"
                        android:layout_marginTop="4dp"
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/lock"
                        android:drawableRight="@drawable/open_eye"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/passLabel" />

                    <TextView
                        android:id="@+id/validationId"
                        style="@style/mediumGCN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Employee id or password are incorrect.\nPlease try again!"
                        android:textColor="#FF3737"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/passField" />

                    <!-- Send OTP Button -->
                    <com.critetiontech.ctvitalio.utils.CustomRoundedButton
                        android:id="@+id/sendOtpBtn"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="24dp"
                        app:strokeWidth="0dp"
                        app:strokeColor="@color/transparent"
                        android:text="Login"
                        android:textColor="#FFFFFF"
                        android:enabled="false"
                        app:customStrokeWidth="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/validationId" />

                    <!-- Terms and Privacy -->
                    <TextView
                        android:id="@+id/forgotPasswordBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot Password?"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/sendOtpBtn" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
</layout>