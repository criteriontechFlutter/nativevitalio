<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vitalCard"
    android:layout_width="150dp"
    android:layout_height="160dp"
    android:background="@drawable/bg_icon_circle"
    android:layout_marginEnd="10dp"
    android:padding="16dp">

    <!-- Icon Container -->
    <FrameLayout
        android:id="@+id/icon_container"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/vital_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="vital_icon_desc"
            android:src="@drawable/heart_icon_new" />

    </FrameLayout>


    <!-- Arrow Icon -->
    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="vital_arrow_desc"
        android:src="@drawable/vital_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Vital Title -->

    <!-- Vital Value -->

    <TextView
        android:id="@+id/vital_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:text="Heart Rate"
        android:textColor="#333333"
        android:maxLines="1"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_container" />

    <TextView
        android:id="@+id/vital_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vital_title" />

</androidx.constraintlayout.widget.ConstraintLayout>