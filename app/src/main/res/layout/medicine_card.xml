<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardMedicine"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeWidth="0dp"
     app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:id="@+id/containerMedicineRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="4dp">

        <!-- Icon -->
        <ImageView
            android:id="@+id/iconMedicine"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/medicine"
            android:layout_marginEnd="8dp"/>

        <!-- Medicine name and time -->
        <LinearLayout
            android:id="@+id/containerText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMedicineName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metformin 500mg"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvMedicineTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 AM"
                android:textColor="@color/greyText"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Taken pill -->
        <TextView
            android:id="@+id/tvMedicineStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/greyBG"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="Taken"
            android:textColor="@color/greyText"
            android:textSize="12sp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>