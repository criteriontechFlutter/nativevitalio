<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners"
    android:padding="20dp">

    <!-- Close Button -->
    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/close_overlay"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top Icon -->
    <ImageView
        android:id="@+id/helpIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_emergency_contact"
    app:layout_constraintTop_toBottomOf="@id/closeBtn"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <!-- Helpline Option 1 -->
    <LinearLayout
        android:id="@+id/helpline1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_helpline_box"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/helpIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/vector__4_"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Helpline No. 1800 024 2424"
            android:textSize="14sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Helpline Option 2 -->
    <LinearLayout
        android:id="@+id/helpline2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_helpline_box"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/helpline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/vector__4_"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Helpline No. 1800 024 2424"
            android:textSize="14sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Call Now Button -->
    <Button
        android:id="@+id/callNowBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Call Now"
        android:textColor="#FFFFFF"
        android:backgroundTint="#007AFF"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/helpline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
