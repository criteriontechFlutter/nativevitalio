                android:text="ðŸŽ‰"
                android:textSize="24sp"/>

            <!-- Message Text -->
            <TextView
                android:id="@+id/streakMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/emojiCelebration"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="You're on a 5-day streak!"
                android:textColor="#2563EB"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/energyMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/streakMessage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="Energy levels rising."
                android:textColor="#2563EB"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>