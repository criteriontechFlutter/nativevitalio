<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="24dp"
        android:background="@drawable/rounded_corners"
        android:gravity="center_horizontal">

        <!-- Title and Close Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Vitals"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/closeButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/close_overlay"
                android:contentDescription="Close"
                android:layout_marginEnd="0dp" />
        </RelativeLayout>

        <!-- SYS -->
        <LinearLayout
            android:id="@+id/sysContainer"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <!-- Left Column: Vital Name + Unit -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SYS"
                    android:textColor="#000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mmHg"
                    android:textColor="#555"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Right Column: Input Field -->
            <EditText
                android:id="@+id/sysInput"
                style="@style/VitalInputStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="00"
                android:inputType="number"  />
        </LinearLayout>

        <!-- DIA -->
        <LinearLayout
            android:id="@+id/diaContainer"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DIA"
                    android:textSize="30sp"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mmHg"
                    android:textSize="14sp"
                    android:textColor="#555" />
            </LinearLayout>

            <EditText
                android:id="@+id/diaInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="00"
                android:inputType="number"
                style="@style/VitalInputStyle" />
        </LinearLayout>

        <!-- Pulse -->
        <LinearLayout
            android:id="@+id/pulseContainer"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pulse"
                    
                    android:textSize="30sp"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/min"
                    android:textSize="14sp"
                    android:textColor="#555" />
            </LinearLayout>

            <EditText
                android:id="@+id/pulseInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="00"
                android:inputType="number"
                style="@style/VitalInputStyle" />
        </LinearLayout>

        <!-- Respiratory Rate -->
        <LinearLayout
            android:id="@+id/rrContainer"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Respiratory Rate"
                    
                    android:textSize="30sp"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="breaths/min"
                    android:textSize="14sp"
                    android:textColor="#555" />
            </LinearLayout>

            <EditText
                android:id="@+id/rrInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="00"
                android:inputType="number"
                style="@style/VitalInputStyle" />
        </LinearLayout>

        <!-- SpO2 -->
        <LinearLayout
            android:id="@+id/spo2Container"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SpO2"
                    
                    android:textSize="30sp"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textSize="14sp"
                    android:textColor="#555" />
            </LinearLayout>

            <EditText
                android:id="@+id/spo2Input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="00"
                android:inputType="number"
                style="@style/VitalInputStyle" />
        </LinearLayout>

        <!-- Heart Rate -->
        <LinearLayout
            android:id="@+id/heartRateContainer"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heart Rate"
                    
                    android:textSize="30sp"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/min"
                    android:textSize="14sp"
                    android:textColor="#555" />
            </LinearLayout>

            <EditText
                android:id="@+id/heartRateInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="00"
                android:inputType="number"
                style="@style/VitalInputStyle" />
        </LinearLayout>



        <!-- Glucose -->
        <LinearLayout
            android:id="@+id/glucoseContainer"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Glucose"
                    android:textSize="30sp"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mg/dL"
                    android:textSize="14sp"
                    android:textColor="#555" />
            </LinearLayout>

            <EditText
                android:id="@+id/glucoseInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="00"
                android:inputType="number"
                style="@style/VitalInputStyle" />
        </LinearLayout>

        <!-- Temperature -->
        <LinearLayout
            android:id="@+id/tempContainer"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    
                    android:textSize="30sp"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â°F"
                    android:textSize="14sp"
                    android:textColor="#555" />
            </LinearLayout>

            <EditText
                android:id="@+id/tempInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="00"
                android:inputType="numberDecimal"
                style="@style/VitalInputStyle" />
        </LinearLayout>

        <!-- RBS -->
        <LinearLayout
            android:id="@+id/rbsContainer"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RBS"
                    
                    android:textSize="30sp"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mg/dL"
                    android:textSize="14sp"
                    android:textColor="#555" />
            </LinearLayout>

            <EditText
                android:id="@+id/rbsInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="00"
                android:inputType="number"
                style="@style/VitalInputStyle" />
        </LinearLayout>

        <!-- Weight -->
        <LinearLayout
            android:id="@+id/weightContainer"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    
                    android:textSize="30sp"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg"
                    android:textSize="14sp"
                    android:textColor="#555" />
            </LinearLayout>

            <EditText
                android:id="@+id/weightInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="00"
                android:inputType="numberDecimal"
                style="@style/VitalInputStyle" />
        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveVitalsBtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="Save Vitals"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_rounded"
            android:enabled="false" />
    </LinearLayout>
</ScrollView>