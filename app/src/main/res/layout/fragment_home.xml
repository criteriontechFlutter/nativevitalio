<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tabViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="100dp"
            android:layout_height="9dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#D9D9D9" />





        <LinearLayout
            android:id="@+id/homeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#F9F9F9"
            android:orientation="vertical"
            android:paddingBottom="100dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/energyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corners"
                android:elevation="0dp"
                app:cardBackgroundColor="@color/white"
                tools:ignore="TooManyViews">

                <LinearLayout
                    android:id="@+id/energyid"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="@drawable/bg_energy_gradient"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- Text Section -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/energyTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/your_energy_story_awaits"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/energySubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/log_your_energy_for_today"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Illustration -->
                    <ImageView
                        android:id="@+id/energyImage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="12dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_meditation" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:text="@string/today_s_health_snapshot"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <include
                android:id="@+id/sleep_progress_ids"
                layout="@layout/wellness_layout_widget" />

            <!--                    <include-->
            <!--                        android:id="@+id/priority_action"-->
            <!--                        layout="@layout/priority_action_card" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/today_s_priority_action"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    android:scrollbars="none" />
                <!-- Dots Indicator -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/layoutIndicators"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:scrollbars="none" />
                <!-- Add your next TextView *inside* the parent layout -->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activechalgesId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingBottom="12dp"
                    android:text="Active Challenges"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/newChallengedRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <!--                        <androidx.recyclerview.widget.RecyclerView-->
                <!--                            android:id="@+id/newChallengedRecyclerView"-->
                <!--                            android:layout_width="match_parent"-->
                <!--                            android:layout_height="174dp"-->
                <!--                            android:clipToPadding="false"-->
                <!--                            android:clipChildren="false"-->
                <!--                            android:orientation="horizontal"-->
                <!--                            android:overScrollMode="never"-->
                <!--                            android:scrollbars="none" />-->

                <!-- Dots Indicator -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/activechalgesDotId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:scrollbars="none" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:text="@string/daily_checklist"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/dailyCheckListCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_progress_track"
                android:backgroundTint="#FFFFFF"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/checklistContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners"
                    android:orientation="vertical"
                    android:padding="12dp">

<!--                    <include-->
<!--                        android:id="@+id/steps_progress_id"-->
<!--                        layout="@layout/daily_checklist_wedget" />-->

<!--                    <include-->
<!--                        android:id="@+id/sleep_progress_id"-->
<!--                        layout="@layout/daily_checklist_wedget" />-->

<!--                    <include-->
<!--                        android:id="@+id/water_progress_id"-->
<!--                        layout="@layout/daily_checklist_wedget" />-->

<!--                    <include-->
<!--                        android:id="@+id/glucose_progress_id"-->
<!--                        layout="@layout/daily_checklist_wedget" />-->

<!--                    <include-->
<!--                        android:id="@+id/bp_progress_id"-->
<!--                        layout="@layout/daily_checklist_wedget" />-->

<!--                    <include-->
<!--                        android:id="@+id/medicine_progress_id"-->
<!--                        layout="@layout/daily_checklist_wedget" />-->

                    <include
                        android:id="@+id/health_track_Id"
                        layout="@layout/health_track_progress" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/medications_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <include
                android:id="@+id/hydration_card_id"
                layout="@layout/item_hydration_card" />



            <!-- Activities -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="12dp"
                android:text="Activities"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Stress, Sleep, Movement, Recovery -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:weightSum="2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/myHealthCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="185dp"
                        android:layout_height="113dp"
                        android:layout_marginTop="9dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:padding="12dp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/myhealth_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="My Health"
                            android:textColor="@color/blackText"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Track &amp; trends"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="185dp"
                        android:layout_height="113dp"
                        android:layout_marginTop="9dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:padding="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/mindfullness" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Mindfulness"
                            android:textColor="@color/blackText"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Destress &amp; Breathe"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:weightSum="2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/goalCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="185dp"
                        android:layout_height="113dp"
                        android:layout_marginTop="9dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:padding="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/progres_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Progress"
                            android:textColor="@color/blackText"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Goals &amp; wins"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="185dp"
                        android:layout_height="113dp"
                        android:layout_marginTop="9dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:padding="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/learn_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Learn"
                            android:textColor="@color/blackText"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tips &amp; recipes"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


            <include
                android:id="@+id/celebrationId"
                layout="@layout/celebration_widget" />


        </LinearLayout>
    </LinearLayout>
