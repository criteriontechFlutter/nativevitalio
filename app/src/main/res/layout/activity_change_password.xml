<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryBlue"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp">

            <!-- Top Bar -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/appTitle"
                    style="@style/veryLargeWCB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Our Smart App!"
                    app:layout_constraintStart_toEndOf="@id/info"
                    app:layout_constraintEnd_toStartOf="@id/langText"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/langText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eng â–¾"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Doctor Image -->

            <!-- Bottom Card (Login Form) -->
            <ImageView
                android:id="@+id/doctorsImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/doctors"
                app:layout_constraintBottom_toTopOf="@id/bottomCard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topBar"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.cardview.widget.CardView
                android:id="@+id/bottomCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:clipToOutline="true"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/only_top_corners"
                    android:padding="24dp">

                    <!-- Login Header -->
                    <TextView
                        android:id="@+id/loginTitle"
                        style="@style/veryLargeWCB"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="Let's Keep Things Safe"
                        android:textColor="@color/bgDark"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/loginSubtitle"
                        style="@style/mediumBCN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Create a strong password to protect your wellness journey"
                        android:textColor="@color/gray"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/loginTitle" />

                    <!-- Input Field -->
                    <TextView
                        android:id="@+id/currentPassLabel"
                        style="@style/mediumGCN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter Current Password"
                        android:textColor="@color/darkGreyText"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/loginSubtitle" />

                    <EditText
                        android:id="@+id/currentPassField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_edittext_rounded"
                        android:drawableLeft="@drawable/lock"
                        android:drawableRight="@drawable/open_eye"
                        android:drawablePadding="8dp"
                        android:hint="Enter current password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="12dp"
                        android:textColorHint="@color/loginHintTextColor"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/currentPassLabel" />

                    <TextView
                        android:id="@+id/newPassLabel"
                        style="@style/mediumGCN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Password"
                        android:textColor="@color/darkGreyText"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/currentPassField" />

                    <EditText
                        android:id="@+id/newPassField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_rounded"
                        android:hint="Enter new password"
                        android:padding="12dp"
                        android:maxLines="1"
                        android:textColorHint="@color/loginHintTextColor"
                        android:layout_marginTop="4dp"
                        android:inputType="textPassword"
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/lock"
                        android:drawableRight="@drawable/open_eye"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/newPassLabel" />
                    <TextView
                        android:id="@+id/confirmPassLabel"
                        style="@style/mediumGCN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm New Passwrod"
                        android:textColor="@color/darkGreyText"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/newPassField" />

                    <EditText
                        android:id="@+id/confirmPassField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_rounded"
                        android:hint="Enter confirm password"
                        android:padding="12dp"
                        android:maxLines="1"
                        android:textColorHint="@color/loginHintTextColor"
                        android:layout_marginTop="4dp"
                        android:drawablePadding="8dp"
                        android:inputType="textPassword"
                        android:drawableLeft="@drawable/lock"
                        android:drawableRight="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/confirmPassLabel" />

                    <!-- Send OTP Button -->
<!--                    <com.critetiontech.ctvitalio.utils.CustomRoundedButton-->
<!--                        android:id="@+id/submitBtn"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="48dp"-->
<!--                        android:layout_marginTop="24dp"-->
<!--                        app:strokeWidth="0dp"-->
<!--                        app:strokeColor="@color/transparent"-->
<!--                        android:backgroundTint="@drawable/button_background_selector"-->
<!--                        android:text="Submit"-->
<!--                        android:textColor="#FFFFFF"-->
<!--                         app:customStrokeWidth="0dp"-->
<!--                        app:layout_constraintStart_toStartOf="parent"-->
<!--                        app:layout_constraintEnd_toEndOf="parent"-->
<!--                        app:layout_constraintTop_toBottomOf="@id/confirmPassField" />-->
                    <com.critetiontech.ctvitalio.utils.CustomRoundedButton
                        android:id="@+id/submitBtn"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="24dp"
                        android:text="Submit"
                        android:enabled="false"
                        android:textColor="#FFFFFF"
                        app:customCornerRadius="16dp"
                        app:gradientStartColor="@color/primaryBlue"
                        app:gradientEndColor="@color/primaryBlue2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/confirmPassField" />
                    <!-- Terms and Privacy -->




                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>