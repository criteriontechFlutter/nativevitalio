<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    android:layout_marginVertical="6dp"
  android:background="@drawable/bg_progress_track"
    app:cardElevation="0dp"
    android:elevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/bg_progress_track"
        android:gravity="center_vertical">

        <!-- Left Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingVertical="4dp">

            <!-- Title / Reminder -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/trophyIcon"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/medicne"
                    android:contentDescription="Medicine icon" />

                <TextView
                    android:id="@+id/tvReminderTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Next dose in 15 mins â€” stay on track"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/arrow_right_grey"
                    android:contentDescription="Arrow right" />
            </LinearLayout>

            <!-- Medication Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="6dp">

                <!-- Medicine Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMedication"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Metformin 500mg"
                        android:textColor="#333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvFrequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 times a day | 08:00 AM"
                        android:textColor="#777777"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Mark Taken Button -->
                <LinearLayout
                    android:id="@+id/btnMarkTaken"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_card_bg"
                    android:backgroundTint="#007BFF"
                    android:gravity="center_vertical"

                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp">

                    <ImageView
                        android:id="@+id/ivCheckMother"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/check_white" />

                    <TextView
                        android:id="@+id/btnText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="6dp"
                        android:text="Mark Taken"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>