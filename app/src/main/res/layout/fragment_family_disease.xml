<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="String" />
        <variable
            name="isSelected"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundColor"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivIllustration"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/family" />

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Your Family's Health History."
                    android:textColor="#1153C9"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    android:text="Are there any hereditary conditions in your family?."
                    android:textAlignment="textStart"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <!-- Form container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="Chronic Disease"
                        android:textColor="#6B7280"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/input_bg"
                        android:paddingStart="12dp"
                        android:paddingEnd="0dp"
                        android:gravity="center_vertical">

                        <AutoCompleteTextView
                            android:id="@+id/chronic_dis"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@android:color/transparent"
                            android:drawableStart="@drawable/ic_search"
                            android:drawablePadding="12dp"
                            android:gravity="start|center_vertical"
                            android:hint="Select Chronic Diseases"
                            android:inputType="text"
                            android:paddingStart="10dp"
                            android:paddingEnd="50dp"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <!-- Chips go here -->
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/selectedListContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        app:flexWrap="wrap"
                        app:justifyContent="flex_start"
                        app:alignItems="flex_start"
                        android:orientation="horizontal" />
                </LinearLayout>

                <!-- Next Button -->


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="50dp"
                    app:tint="@color/primaryBlue"
                    android:layout_marginBottom="16dp"
                    app:cornerRadius="10dp"
                    android:backgroundTint="@color/primaryBlue"
                    android:text="Next"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>