<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="0dp">

    <!-- Navigation Arrows -->
    <ImageView
        android:id="@+id/leftArrow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_arrow_left"
        android:background="@drawable/arrow_background"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/cardContainer"
        app:layout_constraintBottom_toBottomOf="@id/cardContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardContainer"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/rightArrow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_arrow_right"
        android:background="@drawable/arrow_background"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/cardContainer"
        app:layout_constraintBottom_toBottomOf="@id/cardContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardContainer"
        android:layout_marginStart="16dp" />

    <!-- Main Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/indicatorContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          >

            <!-- Top Section with User Info -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_user_avatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Katherine Prokes"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="@id/userAvatar"
                app:layout_constraintBottom_toBottomOf="@id/userAvatar"
                app:layout_constraintStart_toEndOf="@id/userAvatar" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dots_menu"
                app:layout_constraintTop_toTopOf="@id/userAvatar"
                app:layout_constraintBottom_toBottomOf="@id/userAvatar"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Question Text -->
            <TextView
                android:id="@+id/questionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How are you feeling today?"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/userAvatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Emoji -->
            <TextView
                android:id="@+id/moodEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="120sp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/questionText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Mood Title -->
            <TextView
                android:id="@+id/moodTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/moodEmoji"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Select Button -->
            <Button
                android:id="@+id/selectMoodButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Select mood"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:background="@drawable/button_background"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Mood Indicators -->
    <LinearLayout
        android:id="@+id/indicatorContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/cardContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>