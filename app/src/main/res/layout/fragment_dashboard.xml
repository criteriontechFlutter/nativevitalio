        <LinearLayout
            android:id="@+id/profile_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Profile with badge -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp">

                <!-- Circular profile with green border -->
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/person_badge"
                    android:background="@drawable/green_border_circle"
                    android:padding="2dp" />

                <!-- Badge icon -->
                <ImageView
                    android:id="@+id/badgeIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/dash_budage" />
            </FrameLayout>

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Notification bell with dot -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/notificationBell"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/dash_bell"
                    android:contentDescription="Notifications" />

                <!-- Blue Dot -->
                <View
                    android:id="@+id/dotView"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/red_dot" />
            </FrameLayout>

            <!-- Points container -->
            <LinearLayout
                android:id="@+id/leaderBoardId"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:background="@drawable/points_background"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/diamondimg"
                    android:contentDescription="Points" />

                <TextView
                    android:id="@+id/pointsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="230 Points"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginStart="6dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/to_take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="To Take "
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recyclerView"
            app:layout_constraintTop_toBottomOf="@id/profile_section" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:clipToPadding="false"
            android:padding="8dp"
            app:layout_constraintBottom_toTopOf="@id/vitals_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/to_take" />
        <!-- Vitals Section -->
        <TextView
            android:id="@+id/vitals_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Vitals"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@id/vitals_slider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerView" />

<!--        <androidx.viewpager.widget.ViewPager-->
