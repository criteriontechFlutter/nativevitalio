<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.fragments.Dashboard">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dashboardBg"
            android:fitsSystemWindows="false">


            <LinearLayout
                android:id="@+id/profile_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Profile with badge -->
                <FrameLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp">

                    <!-- Circular profile with green border -->
                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/green_border_circle"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/person_badge" />

                    <!-- Badge icon -->
                    <ImageView
                        android:id="@+id/badge"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="bottom|end"
                        android:src="@drawable/dash_budage" />
                </FrameLayout>

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Notification bell with dot -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/notificationBell"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Notifications"
                        android:src="@drawable/dash_bell" />

                    <!-- Blue Dot -->
                    <View
                        android:id="@+id/dotView"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/red_dot" />
                </FrameLayout>

                <!-- Points container -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:background="@drawable/points_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:contentDescription="Points"
                        android:src="@drawable/diamondimg" />

                    <TextView
                        android:id="@+id/pointsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="230 Points"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/nameSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_section">

                <!-- Greeting Text with Wave Emoji -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="sans-serif"
                        android:text="Hi Abhay!"
                        android:textColor="#2196F3"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘‹"
                        android:textSize="32sp" />

                </LinearLayout>

                <!-- Subtitle Text -->
                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="2dp"
                    android:text="A great day to make your health better!"
                    android:textColor="#666666"
                    android:textSize="16sp" />

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/moodLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:backgroundTint="#FFF5E6"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameSection">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="157dp"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Title Text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="How are you feeling today?"
                        android:textColor="#503E00"
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <!-- Emoji Selection Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- Emoji 1 - Sad -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1">

                            <View
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="ðŸ˜¢"
                                android:textSize="28sp" />
                        </FrameLayout>

                        <!-- Emoji 2 - Worried -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1">

                            <View
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                 />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="ðŸ˜Ÿ"
                                android:textSize="28sp" />
                        </FrameLayout>

                        <!-- Emoji 3 - Neutral -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1">

                            <View
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                               />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="ðŸ˜"
                                android:textSize="28sp" />
                        </FrameLayout>

                        <!-- Emoji 4 - Happy (Selected) -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1">

                            <View
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                               />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="ðŸ˜Š"
                                android:textSize="28sp" />
                        </FrameLayout>

                        <!-- Emoji 5 - Content -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1">

                            <View
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                 />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="ðŸ™‚"
                                android:textSize="28sp" />
                        </FrameLayout>

                        <!-- Emoji 6 - Excited -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_weight="1">

                            <View
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="ðŸ¤—"
                                android:textSize="28sp" />
                        </FrameLayout>

                    </LinearLayout>

                    <!-- Selected Label -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-medium"
                        android:text="Good"
                        android:textColor="#4A4A4A"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/to_take"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="To Take "
                android:textSize="18sp"
                android:textStyle="normal"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/recyclerView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/moodLayout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:clipToPadding="false"
                android:padding="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/vitals_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/to_take" />
            <!-- Vitals Section -->
            <TextView
                android:id="@+id/vitals_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="16dp"
                android:text="Vital stats"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/vitals_slider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerView" />

            <!--        <androidx.viewpager.widget.ViewPager-->
            <!--            android:id="@+id/vitals_slider"-->
            <!--            android:layout_width="150dp"-->
            <!--            android:layout_height="150dp"-->
            <!--            android:layout_marginTop="8dp"-->
            <!--            android:padding="15dp"-->
            <!--            app:layout_constraintEnd_toEndOf="parent"-->
            <!--            app:layout_constraintStart_toStartOf="parent"-->
            <!--            app:layout_constraintTop_toBottomOf="@id/vitals_label" />-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vitals_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:padding="16dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vitals_label" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/vitals_indicator"
                android:layout_width="100dp"
                android:layout_height="8dp"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vitals_slider"
                app:tabBackground="@drawable/tab_selector_dot"
                app:tabGravity="center"
                app:tabIndicatorColor="@android:color/transparent"
                app:tabIndicatorHeight="0dp"
                app:tabMode="fixed"
                app:tabRippleColor="@android:color/transparent" />
            <!-- Primary Actions Section -->
            <TextView
                android:id="@+id/primary_actions_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Primary Actions"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vitals_indicator" />

            <GridLayout
                android:id="@+id/primary_actions_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:columnCount="3"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/primary_actions_label">

                <!-- Vitals Detail -->


                <FrameLayout
                    android:id="@+id/vital_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/dashboard_rounded_corner">

                    <LinearLayout
                        android:layout_width="111dp"
                        android:layout_height="111dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/vitals" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:gravity="center"
                            android:text="Vitals\nDetails"
                            android:textFontWeight="500"
                            android:textSize="13dp" />
                    </LinearLayout>
                </FrameLayout>


                <!-- Fluid Intake/Output -->
                <FrameLayout
                    android:id="@+id/fluidlayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/dashboard_rounded_corner">

                    <LinearLayout
                        android:layout_width="111dp"
                        android:layout_height="111dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/fluidmanagement" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:gravity="center"
                            android:text="Fluid Intake\n/Output"
                            android:textFontWeight="500"
                            android:textSize="13dp" />
                    </LinearLayout>
                </FrameLayout>

                <!-- Symptoms Tracker -->
                <FrameLayout
                    android:id="@+id/symptoms_tracker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/dashboard_rounded_corner">

                    <LinearLayout
                        android:layout_width="111dp"
                        android:layout_height="111dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/symptoms" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:gravity="center"
                            android:text="Symptom\nTracker"
                            android:textFontWeight="500"
                            android:textSize="13dp" />
                    </LinearLayout>
                </FrameLayout>

                <!-- Pills Reminder -->
                <FrameLayout
                    android:id="@+id/pills_reminder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/dashboard_rounded_corner">

                    <LinearLayout
                        android:layout_width="111dp"
                        android:layout_height="111dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/pills" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            android:text="Pills\nReminder"
                            android:textFontWeight="500"
                            android:textSize="13dp" />
                    </LinearLayout>
                </FrameLayout>

                <!-- Diet Checklist -->
                <FrameLayout
                    android:id="@+id/diet_checklist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/dashboard_rounded_corner">

                    <LinearLayout
                        android:layout_width="111dp"
                        android:layout_height="111dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/diet" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            android:text="Diet\nChecklist"
                            android:textFontWeight="500"
                            android:textSize="13dp" />
                    </LinearLayout>
                </FrameLayout>

            </GridLayout>


            <TextView
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Other"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/primary_actions_grid" />

            <!-- Responsive Grid -->
            <GridLayout
                android:id="@+id/other_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:columnCount="3"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/other">

                <!-- Upload Report (Fixed Width) -->
                <FrameLayout
                    android:id="@+id/upload_report"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/dashboard_rounded_corner">

                    <LinearLayout
                        android:layout_width="111dp"
                        android:layout_height="111dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/uploadreport" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Upload Report"
                            android:textFontWeight="500"
                            android:textSize="13dp" />
                    </LinearLayout>
                </FrameLayout>

            </GridLayout>


            <!-- Bottom Navigation -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/dashboardIconBg"
        android:elevation="5dp"
        app:itemBackground="@android:color/transparent"
        app:itemIconSize="24dp"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector"
        app:menu="@menu/menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Floating Action Button Above Bottom Nav -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_mic"
        android:background="@drawable/fab_gradient_background"
        app:backgroundTint="@color/primaryBlue"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>