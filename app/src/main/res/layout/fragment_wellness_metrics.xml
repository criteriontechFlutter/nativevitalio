<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#F7F9FB"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F9FB"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:elevation="5dp"
            android:background="@color/primaryBlueLight"
            android:orientation="vertical">

            <!-- Header: Arrow + Text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdgeLength="@dimen/_14sdp"
                android:elevation="@dimen/_5sdp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="0dp">

                <ImageView
                    android:id="@+id/wellnessImageArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:id="@+id/wellnessText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wellness Metrics"
                    android:textSize="18sp"
                    android:paddingStart="16dp"
                    android:textColor="@android:color/black" />

            </LinearLayout>


        </LinearLayout>

        <com.critetiontech.ctvitalio.utils.CenterDatePickerView
            android:id="@+id/centerDatePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#F7F9FB">

            <!-- Movement Index Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
android:background="@drawable/bg_movement_card"
                android:padding="18dp"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:contentDescription="movement"
                            android:src="@drawable/movement_left_icon"
                           />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:text="Movement Index"
                            android:textColor="#1A1A2E"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:contentDescription="navigate"
                            android:src="@drawable/arrow_right"
                            app:tint="#CCCCCC" />
                    </LinearLayout>

                    <com.critetiontech.ctvitalio.utils.ArcProgressView
                        android:id="@+id/circular_progress"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_margin="0dp"
                        android:foregroundGravity="center" />


                    <LinearLayout
                        android:id="@+id/hourlyChartContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-100dp"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical"

                        android:paddingHorizontal="8dp"
                        android:paddingVertical="12dp">

                        <!-- Bar Graph -->
                        <LinearLayout
                            android:id="@+id/barContainer"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"

                            android:gravity="bottom|center_horizontal"
                            android:orientation="horizontal" />

                        <!-- X-Axis Time Labels -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:alpha="0.1"
                            android:background="#546788"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="12 AM"
                                android:textColor="#666666"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="6 AM"
                                android:textColor="#666666"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="12 PM"
                                android:textColor="#666666"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="6 PM"
                                android:textColor="#666666"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="12 AM"
                                android:textColor="#666666"
                                android:textSize="10sp" />
                        </LinearLayout>

                    </LinearLayout>


                    <!-- Bar Chart Container -->


                    <!-- Achievement Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/achievement_background"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="5dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="check"
                            android:src="@drawable/ic_launcher_foreground"
                            app:tint="#4CAF50" />

                        <TextView
                            android:id="@+id/achievement_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="You achieved 1/2 movement goals"
                            android:textColor="#333333"
                            android:textSize="13sp" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:contentDescription="navigate"
                            android:src="@drawable/arrow_right"
                            app:tint="#CCCCCC" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#F7F9FB">

            <!-- Movement Index Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:background="@drawable/bg_stress_rhythm"
                android:padding="18dp"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:contentDescription="movement"
                            android:src="@drawable/stress_rhytm_icon"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:text="Stress Rhythm"
                            android:textColor="#1A1A2E"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:contentDescription="navigate"
                            android:src="@drawable/arrow_right"
                            app:tint="#CCCCCC" />
                    </LinearLayout>




                    <LinearLayout
                        android:id="@+id/hourlyChartStress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|center_horizontal"
                        android:orientation="vertical"

                        android:paddingHorizontal="8dp"
                        android:paddingVertical="12dp">

                        <!-- Bar Graph -->
                        <LinearLayout
                            android:id="@+id/barContainerStress"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"

                            android:gravity="bottom|center_horizontal"
                            android:orientation="horizontal" />

                        <!-- X-Axis Time Labels -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:alpha="0.1"
                            android:background="#546788"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="12 AM"
                                android:textColor="#666666"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="6 AM"
                                android:textColor="#666666"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="12 PM"
                                android:textColor="#666666"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="6 PM"
                                android:textColor="#666666"
                                android:textSize="10sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="12 AM"
                                android:textColor="#666666"
                                android:textSize="10sp" />
                        </LinearLayout>

                    </LinearLayout>


                    <!-- Bar Chart Container -->


                    <!-- Achievement Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/achievement_background"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="5dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="check"
                            android:src="@drawable/ic_launcher_foreground"
                            app:tint="#4CAF50" />

                        <TextView
                            android:id="@+id/achievement_text_stress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="You achieved 1/2 movement goals"
                            android:textColor="#333333"
                            android:textSize="13sp" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:contentDescription="navigate"
                            android:src="@drawable/arrow_right"
                            app:tint="#CCCCCC" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>



    </LinearLayout>

</ScrollView>