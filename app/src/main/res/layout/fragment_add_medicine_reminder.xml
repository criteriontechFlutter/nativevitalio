<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivBack"
                android:src="@drawable/ic_back"
                android:layout_width="22dp"
                android:layout_height="22dp"
             />

            <TextView
                android:text="Add New Medicine Reminder"
                android:textColor="#1A1A1A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Medicine Name -->
        <TextView
            android:text="Medicine Name"
            android:textColor="#777E90"
            android:textSize="13sp"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_field"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="6dp">

            <EditText
                android:id="@+id/etMedicineName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Search Medicine"
                android:textColor="#1A1A1A"
                android:textSize="15sp"
                android:background="@null"
                android:padding="0dp"
                android:inputType="text" />

            <ImageView
                android:src="@drawable/ic_search"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="#A0A0A0" />
        </LinearLayout>

        <!-- Frequency -->
        <TextView
            android:text="Frequency"
            android:textColor="#777E90"
            android:textSize="13sp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spFrequency"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_field"
            android:layout_marginTop="6dp" />

        <!-- âœ… Add missing frequency containers -->
        <LinearLayout
            android:id="@+id/containerEveryXDay"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:text="Every "
                android:textSize="14sp"
                android:textColor="#1A1A1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etEveryXDay"
                android:hint="2"
                android:inputType="number"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="6dp"/>

            <TextView
                android:text=" days"
                android:textSize="14sp"
                android:textColor="#1A1A1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerDaysOfWeek"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Select Days (Mon, Wed, Fri...)"
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerSpecificDates"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Specific date(s) of month:"
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etSpecificDates"
                android:hint="10th, 20th, 30th"
                android:inputType="text"
                android:background="@drawable/bg_field"
                android:padding="10dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Time Slot -->
        <TextView
            android:text="Time Slot"
            android:textColor="#777E90"
            android:textSize="13sp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_field"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="6dp">

            <ImageView
                android:src="@drawable/ic_time"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:tint="#1976D2" />

            <TextView
                android:id="@+id/tvTime"
                android:text="08:00"
                android:textSize="15sp"
                android:textColor="#1A1A1A"
                android:layout_marginStart="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:text="1 tablet"
                android:textColor="#1976D2"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Add Slot -->
        <TextView
            android:id="@+id/tvAddSlot"
            android:text="+ Add Slot"
            android:textColor="#1976D2"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Instructions -->
        <TextView
            android:text="Instructions"
            android:textColor="#777E90"
            android:textSize="13sp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etInstructions"
            android:hint="i.e. Take this before food"
            android:textColor="#1A1A1A"
            android:textSize="15sp"
            android:background="@drawable/bg_field"
            android:padding="12dp"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <!-- Start / End Date -->




        <LinearLayout
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <!-- Start Date Column -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Start Date"
                    android:textColor="#777E90"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_field"
                    android:paddingHorizontal="12dp"
                    android:layout_marginTop="6dp">

                    <EditText
                        android:id="@+id/etStartDate"
                        android:hint="01/10/2025"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:background="@null"
                        android:textColor="#1A1A1A"
                        android:textSize="15sp" />

                    <ImageView
                        android:src="@drawable/ic_calendar"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        app:tint="#A0A0A0" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <!-- End Date Column -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="End Date"
                    android:textColor="#777E90"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_field"
                    android:paddingHorizontal="12dp"
                    android:layout_marginTop="6dp">

                    <EditText
                        android:id="@+id/etEndDate"
                        android:hint="01/11/2025"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:background="@null"
                        android:textColor="#1A1A1A"
                        android:textSize="15sp" />

                    <ImageView
                        android:src="@drawable/ic_calendar"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        app:tint="#A0A0A0" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Add Medicine Button -->
        <Button
            android:id="@+id/addMedicine"
            android:text="Add Medicine"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@android:color/white"
            android:backgroundTint="#1976D2"
            app:cornerRadius="12dp" />
    </LinearLayout>
</ScrollView>
