<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    app:layoutDescription="@xml/leaderboard_scene"
    tools:ignore="MissingClass">

    <!-- Header -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leaderboard"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <LinearLayout
        android:id="@+id/playerId"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_left"
        android:layout_width="103dp"
        android:layout_height="300dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card_center">

        <!-- Avatar frame above the card -->
        <FrameLayout
            android:id="@+id/avatar_left"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toTopOf="@+id/body_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:translationY="-23dp">

            <ImageView
                android:id="@+id/thirdUser"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/avatar_border_gold"
                android:src="@drawable/diamond"  />

            <ImageView
                android:id="@+id/badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:src="@drawable/dash_budage" />
        </FrameLayout>

        <!-- Name below avatar -->
        <TextView
            android:id="@+id/name_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Darrell Steward"
            android:textColor="#1E1E1E"
            android:textSize="-12sp"
            android:translationY="-18dp"
            app:layout_constraintTop_toBottomOf="@id/avatar_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card body -->
        <androidx.cardview.widget.CardView
            android:id="@+id/body_left"
            android:layout_width="103dp"
            android:layout_height="127dp"
            android:layout_marginTop="36dp"
            app:cardBackgroundColor="#4FA3A5"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/medal_left"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:contentDescription="medal"
                    android:src="@drawable/medal3"
                    android:translationY="-16dp" />

                <ImageView
                    android:id="@+id/gem_left"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="gem"
                    android:src="@drawable/diamond" />

                <TextView
                    android:id="@+id/score_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="350"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_center"
        android:layout_width="103dp"
        android:layout_height="300dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toEndOf="@id/card_left"
        app:layout_constraintEnd_toStartOf="@id/card_right">

        <!-- Avatar frame above the card -->
        <FrameLayout
            android:id="@+id/avatar_center"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toTopOf="@+id/body_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:translationY="-23dp">

            <ImageView
                android:id="@+id/firstUser"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/avatar_border_gold"
                android:src="@drawable/diamond"  />

            <ImageView
                android:id="@+id/badge_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:src="@drawable/dash_budage" />
        </FrameLayout>

        <!-- Name below avatar -->
        <TextView
            android:id="@+id/name_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Darrell Steward"
            android:textColor="#1E1E1E"
            android:textSize="-12sp"
            android:translationY="-18dp"
            app:layout_constraintTop_toBottomOf="@id/avatar_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card body -->
        <androidx.cardview.widget.CardView
            android:id="@+id/body_center"
            android:layout_width="103dp"
            android:layout_height="199dp"
            android:layout_marginTop="36dp"
            app:cardBackgroundColor="#F75435"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/medal_center"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:contentDescription="medal"
                    android:src="@drawable/medal3"
                    android:translationY="-46dp" />

                <ImageView
                    android:id="@+id/gem_center"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="gem"
                    android:src="@drawable/diamond" />

                <TextView
                    android:id="@+id/score_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="350"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_right"
        android:layout_width="103dp"
        android:layout_height="300dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toEndOf="@id/card_center"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Avatar frame above the card -->
        <FrameLayout
            android:id="@+id/avatar_right"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toTopOf="@+id/body_right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:translationY="-23dp">

            <ImageView
                android:id="@+id/secondUser"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/avatar_border_gold"
                android:src="@drawable/diamond"  />

            <ImageView
                android:id="@+id/badge_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:src="@drawable/dash_budage" />
        </FrameLayout>

        <!-- Name below avatar -->
        <TextView
            android:id="@+id/name_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Darrell Steward"
            android:textColor="#1E1E1E"
            android:textSize="-12sp"
            android:translationY="-18dp"
            app:layout_constraintTop_toBottomOf="@id/avatar_right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card body -->
        <androidx.cardview.widget.CardView
            android:id="@+id/body_right"
            android:layout_width="103dp"
            android:layout_height="140dp"
            android:layout_marginTop="36dp"
            app:cardBackgroundColor="#FDAE38"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/medal_right"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:contentDescription="medal"
                    android:src="@drawable/medal3"
                    android:translationY="-46dp" />

                <ImageView
                    android:id="@+id/gem_right"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:contentDescription="gem"
                    android:src="@drawable/diamond" />

                <TextView
                    android:id="@+id/score_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="350"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <!-- Add player2 and player3 similarly using different constraints -->

    <!-- RecyclerView for lower ranks -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerList"
        android:layout_width="394dp"
        android:layout_height="274dp"
        android:layout_marginTop="16dp"

        android:foregroundGravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playerId"
        tools:layout_editor_absoluteX="17dp" />
</androidx.constraintlayout.motion.widget.MotionLayout>