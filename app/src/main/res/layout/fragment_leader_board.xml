<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    app:layoutDescription="@xml/leaderboard_scene"
    tools:ignore="MissingClass">

    <!-- Header -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leaderboard"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/playerid"
            android:layout_width="410dp"
            android:layout_height="108dp"
            android:layout_marginBottom="0dp"

            android:gravity="bottom"
            android:orientation="horizontal" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_left"
                android:layout_width="103dp"
                android:layout_height="180dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="12dp"

                android:layout_marginBottom="0dp"
                app:layout_constraintEnd_toStartOf="@id/card_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title">

                <!-- rounded card body -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/body_left"
                    android:layout_width="103dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginBottom="0dp"
                    android:padding="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardUseCompatPadding="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/medal_left"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:contentDescription="medal"
                            android:src="@drawable/medal3"
                            android:translationY="-8dp" />

                        <ImageView
                            android:id="@+id/gem_left"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:contentDescription="gem"
                            android:src="@drawable/diamond" />

                        <TextView
                            android:id="@+id/score_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="350"
                            android:textColor="@android:color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- medal -->

                <!-- avatar overlapping above the card -->
                <ImageView
                    android:id="@+id/avatar_left"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/avatar_border_gold"
                    android:src="@drawable/diamond"
                    android:translationY="-11dp"
                    app:layout_constraintBottom_toTopOf="@id/body_left"
                    app:layout_constraintEnd_toEndOf="@id/body_left"
                    app:layout_constraintStart_toStartOf="@id/body_left" />

                <ImageView
                    android:id="@+id/medal_lefts"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:contentDescription="medal"
                    android:src="@drawable/medal3"
                    android:translationY="-23dp"
                    app:layout_constraintEnd_toEndOf="@id/avatar_left"
                    app:layout_constraintStart_toStartOf="@id/avatar_left"
                    app:layout_constraintTop_toBottomOf="@id/avatar_left" />

                <!-- name under avatar -->
                <TextView
                    android:id="@+id/name_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-11dp"
                    android:text="Darrell Steward"
                    android:textColor="#1E1E1E"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/medal_lefts"
                    app:layout_constraintStart_toStartOf="@id/medal_lefts"
                    app:layout_constraintTop_toBottomOf="@id/medal_lefts" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- CENTER - 1st PLACE (red card, taller) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_center"
                android:layout_width="103dp"
                android:layout_height="260dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                app:layout_constraintEnd_toStartOf="@id/card_right"
                app:layout_constraintStart_toEndOf="@id/card_left"
                app:layout_constraintTop_toBottomOf="@id/title">

                <androidx.cardview.widget.CardView
                    android:id="@+id/body_center"
                    android:layout_width="103dp"
                    android:layout_height="220dp"
                    android:layout_marginTop="36dp"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="18dp"
                    app:cardUseCompatPadding="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/gem_center"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:contentDescription="gem"
                            android:src="@drawable/diamond" />

                        <TextView
                            android:id="@+id/score_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="465"
                            android:textColor="@android:color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/medal_center"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="medal"
                    android:src="@drawable/lock"
                    android:translationY="-22dp"
                    app:layout_constraintEnd_toEndOf="@id/body_center"
                    app:layout_constraintStart_toStartOf="@id/body_center"
                    app:layout_constraintTop_toTopOf="@id/body_center" />

                <ImageView
                    android:id="@+id/avatar_center"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:background="@drawable/avatar_border_gold"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add_vital"
                    android:translationY="-44dp"
                    app:layout_constraintBottom_toTopOf="@id/body_center"
                    app:layout_constraintEnd_toEndOf="@id/body_center"
                    app:layout_constraintStart_toStartOf="@id/body_center" />

                <TextView
                    android:id="@+id/name_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Albert Flores"
                    android:textColor="#1E1E1E"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/avatar_center"
                    app:layout_constraintStart_toStartOf="@id/avatar_center"
                    app:layout_constraintTop_toBottomOf="@id/avatar_center" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- RIGHT - 3rd PLACE (yellow/orange card) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_right"
                android:layout_width="103dp"
                android:layout_height="180dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/card_center"
                app:layout_constraintTop_toBottomOf="@id/title">

                <androidx.cardview.widget.CardView
                    android:id="@+id/body_right"
                    android:layout_width="103dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="36dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardUseCompatPadding="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/gem_right"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:contentDescription="gem"
                            android:src="@drawable/diamond" />

                        <TextView
                            android:id="@+id/score_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="360"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/medal_right"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="medal"
                    android:src="@drawable/person_badge"
                    android:translationY="-18dp"
                    app:layout_constraintEnd_toEndOf="@id/body_right"
                    app:layout_constraintStart_toStartOf="@id/body_right"
                    app:layout_constraintTop_toTopOf="@id/body_right" />

                <ImageView
                    android:id="@+id/avatar_right"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/avatar_border_gold"
                    android:scaleType="centerCrop"
                    android:src="@drawable/diamond"
                    android:translationY="-36dp"
                    app:layout_constraintBottom_toTopOf="@id/body_right"
                    app:layout_constraintEnd_toEndOf="@id/body_right"
                    app:layout_constraintStart_toStartOf="@id/body_right" />

                <TextView
                    android:id="@+id/name_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Jacob Jones"
                    android:textColor="#1E1E1E"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/avatar_right"
                    app:layout_constraintStart_toStartOf="@id/avatar_right"
                    app:layout_constraintTop_toBottomOf="@id/avatar_right" />
            </androidx.constraintlayout.widget.ConstraintLayout>
         </LinearLayout>

    <!-- Add player2 and player3 similarly using different constraints -->

    <!-- RecyclerView for lower ranks -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:foregroundGravity="bottom"

        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.motion.widget.MotionLayout>