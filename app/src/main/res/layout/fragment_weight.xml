<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="String"/>
        <variable
            name="isSelected"
            type="Boolean"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:padding="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical">

                <!-- Illustration -->
                <ImageView
                    android:id="@+id/ivIllustration"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/weightpage"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp" />

                <!-- Title -->
                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What is your current weight?"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1153C9"
                    android:layout_marginTop="16dp" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your weight helps us provide tailored health and fitness recommendations."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textAlignment="textStart"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp" />

                <!-- Weight input with unit -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/etWeight"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Enter your weight"
                        android:inputType="numberDecimal"
                        android:background="@drawable/border"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingEnd="50dp"
                    />

                    <!-- Spinner for Unit selection -->
<!--                    <Spinner-->
<!--                        android:id="@+id/spinnerUnit"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_gravity="center_vertical"-->
<!--                        android:background="@color/white"-->
<!--                        android:layout_marginEnd="12dp"-->
<!--                     />-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="kg"
                        android:paddingStart="16dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="14dp"
                        android:paddingEnd="50dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Next Button -->

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="50dp"
                    app:tint="@color/primaryBlue"
                    android:layout_marginBottom="16dp"
                    app:cornerRadius="10dp"
                    android:backgroundTint="@color/primaryBlue"
                    android:text="Next"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>