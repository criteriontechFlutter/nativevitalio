<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Top AppBar title -->
    <TextView
        android:id="@+id/title"
        android:text="Create Account"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingBottom="24dp" />

    <!-- Confetti Illustration -->
    <ImageView
        android:id="@+id/confettiImage"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/account_success"
    android:layout_marginBottom="24dp" />

    <!-- Progress Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_rounded_card"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/progressPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="81%"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_gravity="start" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:progress="81"
            android:progressTint="@color/blue"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#F0F0F0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you for registering with Vitalio!"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your submission is now complete, and we’re excited to have you on board."
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- What's Next title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What’s Next?"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To help you maintain optimal health, we need a few more details."
        android:textAlignment="center"
        android:textColor="#888888"
        android:textSize="13sp"
        android:layout_marginBottom="32dp" />

    <!-- CTA Button -->
    <Button
        android:id="@+id/btnSetPreferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set preferences for a better experience"
        android:backgroundTint="@color/blue"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="12dp"
        android:background="@drawable/bg_button_rounded" />
</LinearLayout>