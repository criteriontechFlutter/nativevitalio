<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/bottomSheetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:id="@+id/bottomSheetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Allergy"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- Substance Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Substance Type" />

        <Spinner
            android:id="@+id/spinnerSubstanceType"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp" />

        <!-- Substance -->
        <EditText
            android:id="@+id/inputSubstance"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Substance"
            android:layout_marginBottom="16dp" />

        <!-- Reaction -->
        <EditText
            android:id="@+id/inputReaction"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Reaction"
            android:layout_marginBottom="16dp" />

        <!-- Severity Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnMild"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Mild"
                android:backgroundTint="#EEEEEE"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnModerate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Moderate"
                android:backgroundTint="#EEEEEE"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnSevere"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Severe"
                android:backgroundTint="#EEEEEE"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- âœ… Add Button - Always Visible -->
        <Button
            android:id="@+id/btnAddAllergy"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Add"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#007BFF" />

    </LinearLayout>
</ScrollView>