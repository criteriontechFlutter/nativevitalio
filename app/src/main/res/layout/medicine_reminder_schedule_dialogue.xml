<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_rounded"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Close Icon -->
    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_close"
        android:contentDescription="Close dialog"
        android:padding="4dp"
        app:tint="@color/black" />

    <!-- Calendar + Check Animation -->
    <ImageView
        android:id="@+id/medicineReminder"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Medicine reminder animation"
        android:layout_gravity="center" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Medicine Reminder Scheduled"
        android:textAlignment="center"
        android:textColor="#202529"
        android:fontFamily="sans-serif-medium"
        android:textSize="22sp"
        android:layout_marginBottom="6dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your reminder is all set! We’ll notify you when it’s time to take your medicine."
        android:textAlignment="center"
        android:textColor="#202529"
        android:fontFamily="sans-serif-light"
        android:textSize="14sp"
        android:layout_marginBottom="24dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginBottom="16dp" />
    <!-- Add More Button -->
    <Button
        android:id="@+id/btnAddMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add More"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        android:backgroundTint="#007BFF"
        android:layout_marginBottom="12dp"
        android:paddingVertical="10dp"
        android:background="@drawable/bg_button_blue" />

    <!-- Done Button -->
    <TextView
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textAlignment="center"
        android:textColor="#1A1A1A"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium"
        android:paddingVertical="8dp" />

</LinearLayout>
