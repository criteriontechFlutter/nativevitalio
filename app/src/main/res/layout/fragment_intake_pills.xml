<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F7FB">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/medicationCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_back"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Time -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00 AM"
            android:textSize="14sp"
            android:textColor="#7A7A7A"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/backButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Pill Icon -->
        <ImageView
            android:id="@+id/imgPill"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:src="@drawable/pills"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card Content -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/imgPill"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvMedName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lipitor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvInstruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take 30 mins after a breakfast"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvDosage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 tablet"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvSubMed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atorvastatin"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#222222"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit..."
                    android:textSize="12sp"
                    android:textColor="#555555"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tvMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:textSize="12sp"
                    android:textColor="@color/purple_200"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Mark as taken -->
        <ImageView
            android:id="@+id/imgCheck"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_checkbox_checked"
            app:layout_constraintTop_toBottomOf="@id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvMarkAsTaken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark as taken"
            android:textSize="12sp"
            android:textColor="#7A7A7A"

            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/imgCheck"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>