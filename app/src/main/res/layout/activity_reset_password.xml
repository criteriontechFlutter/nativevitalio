            <androidx.cardview.widget.CardView
                android:id="@+id/bottomCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:clipToOutline="true"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/only_top_corners"
                    android:padding="24dp">

                    <!-- Login Header -->
                    <TextView
                        android:id="@+id/loginTitle"
                        style="@style/veryLargeWCB"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="Reset Password"
                        android:textColor="@color/bgDark"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/loginSubtitle"
                        style="@style/mediumBCN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Create a strong password to protect your wellness journey."
                        android:textColor="@color/gray"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/loginTitle" />

                    <!-- Input Field -->
                    <TextView
                        android:id="@+id/inputLabel"
                        style="@style/mediumGCN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Password"
                        android:textColor="@color/darkGreyText"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/loginSubtitle" />

                    <EditText
                        android:id="@+id/inputField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_rounded"
                        android:hint="Enter password "
                        android:drawableRight="@drawable/open_eye"
                        android:inputType="textPassword"
                        android:padding="12dp"
                        android:maxLines="1"
                        android:textColorHint="@color/loginHintTextColor"
                        android:layout_marginTop="4dp"
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/lock"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/inputLabel" />

                    <TextView
                        android:id="@+id/confirmPasswordLabel"
                        style="@style/mediumGCN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm New Password"
                        android:textColor="@color/darkGreyText"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/inputField" />


                    <!-- Send OTP Button -->
                    <EditText
                        android:id="@+id/confirmPasswordField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_edittext_rounded"
                        android:drawableLeft="@drawable/lock"
                        android:drawablePadding="8dp"
                        android:hint="Enter new password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="12dp"
                        android:textColorHint="@color/loginHintTextColor"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/confirmPasswordLabel" />

                    <com.critetiontech.ctvitalio.utils.CustomRoundedButton
                        android:id="@+id/submitBtn"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="24dp"
                        app:strokeWidth="0dp"
                        app:strokeColor="@color/transparent"
                        android:backgroundTint="@color/primaryBlue"
                        android:text="Submit"
                        android:textColor="#FFFFFF"
                         app:customStrokeWidth="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/confirmPasswordField" />

                    <!-- Terms and Privacy -->



                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>