<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_card_white"
    android:gravity="center_horizontal"
    android:padding="14dp">

    <TextView
        android:id="@+id/dayLabel"
        android:text="Set Your Daily Steps Goal"
        android:textSize="16sp"
        android:gravity="start"
        android:textStyle="bold"
        android:paddingBottom="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- WEEK SELECTOR ROW -->
    <LinearLayout
        android:id="@+id/weekSelectorContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="14dp"
        android:background="@drawable/container_gradient">

        <!-- Days will be added programmatically -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/selectAllDaysId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
         android:gravity="center_horizontal"
        android:background="@drawable/bg_card_white"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/rounded_circle" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="24dp"
            android:text="Select all days"
             android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#000000" />

    </LinearLayout>
    <!-- CARD STARTS BELOW WEEK SELECTOR  -->
    <LinearLayout
        android:id="@+id/cardGlucose"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_card_white"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageButton
                android:id="@+id/btnMinus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_light"
                android:src="@drawable/ic_minus" />

            <TextView
                android:id="@+id/tvStepsValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="24dp"
                android:text=" 0"
                android:gravity="center"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etHiddenInput"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="invisible"
                android:inputType="number"
                android:imeOptions="actionDone" />

            <ImageButton
                android:id="@+id/btnPlus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_light"
                android:src="@drawable/ic_add" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_glucose" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Steps per day"
                android:textColor="#808C9A"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="24dp"
        android:text="Save "
        android:textColor="#000000"
        android:textSize="13sp"        android:background="@drawable/container_gradient"
        android:gravity="center"

    android:textStyle="bold" />

</LinearLayout>