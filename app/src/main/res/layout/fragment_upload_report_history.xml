<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBlueLight"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Top Header Row -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <!-- Back Icon -->
        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <!-- ðŸŸ¢ Title: Lab Reports aligned left -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/backIcon"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="Lab Reports"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="@android:color/black" />


        <LinearLayout
            android:id="@+id/addReport"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_button_bg"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:focusable="true"

            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_action_add"
                app:tint="@color/primaryBlue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Report"
                android:textColor="#356DF3"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Tab Row -->
    <LinearLayout
        android:id="@+id/tabRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:padding="6dp"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tabRadiology"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:background="@drawable/tab_disabled"
            android:gravity="center|center_vertical|center_horizontal"
            android:text="Radiology"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tabImaging"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/tab_selected"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:paddingHorizontal="4dp"
            android:text="Imaging"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tabLab"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:background="@drawable/tab_disabled"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:paddingHorizontal="4dp"
            android:text="Lab"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Section Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView for report list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewReports"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="8dp" />
</LinearLayout>