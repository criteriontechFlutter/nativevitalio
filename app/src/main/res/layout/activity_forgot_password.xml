<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:windowSoftInputMode="adjustResize"
        android:layout_height="match_parent"
        android:background="@color/forgotPassword"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp">

            <!-- Top Bar -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageView
                    android:id="@+id/appTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginTop="100dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/vitalio_logo_svg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/langText"
                    app:layout_constraintStart_toEndOf="@id/info"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/langText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eng â–¾"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Doctor Image -->

            <!-- Bottom Card (Login Form) -->
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/doctorsImage"

                android:layout_width="match_parent"
                android:layout_height="302dp"
                android:src="@drawable/worried"
                app:layout_constraintBottom_toTopOf="@id/bottomCard"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topBar"
                app:layout_constraintVertical_bias="0.0" />

            <androidx.cardview.widget.CardView
                android:id="@+id/bottomCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:clipToOutline="true"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/only_top_corners"
                    android:padding="24dp">

                    <!-- Login Header -->
                    <TextView
                        android:id="@+id/loginTitle"
                        style="@style/veryLargeWCB"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="Forgot Password"
                        android:textColor="@color/bgDark"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/loginSubtitle"
                        style="@style/mediumBCN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Reset the password"
                        android:textColor="@color/gray"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/loginTitle" />

                    <!-- Input Field -->
                    <TextView
                        android:id="@+id/inputLabel"
                        style="@style/mediumGCN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot your Registered Email"
                        android:textColor="@color/darkGreyText"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/loginSubtitle" />

                    <EditText
                        android:id="@+id/inputField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_rounded"
                        android:hint="Enter email"
                        android:padding="12dp"
                        android:maxLines="1"
                        android:textColorHint="@color/loginHintTextColor"
                        android:layout_marginTop="4dp"
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/person_badge"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/inputLabel" />


                    <!-- Send OTP Button -->

                    <com.critetiontech.ctvitalio.utils.CustomRoundedButton
                        android:id="@+id/sendResetLink"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="24dp"
                        android:text="@string/send_reset_link"
                        android:enabled="false"
                        android:textColor="#FFFFFF"

                        app:customCornerRadius="16dp"
                        app:gradientStartColor="@color/primaryBlue"
                        app:gradientEndColor="@color/primaryBlue2"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/inputField" />

                    <!-- Terms and Privacy -->



                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>