<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/dailyChecklistID"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
      >

        <!-- Row: progress bar + value -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="6dp"
            tools:ignore="UselessParent">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="21dp"
                android:layout_weight="1"
                android:clipToOutline="true">

                <!-- Progress bar with red fill -->
                <ProgressBar
                    android:id="@+id/progressSteps"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:max="100"
                    android:progress="10"
                    android:backgroundTint="@android:color/transparent"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/bg_progress_fill"/>

                <!-- Overlay with icon + text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <!-- Medicine Icon (white) -->
                    <ImageView
                        android:id="@+id/ivStepsIcon"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/medicine"
                        android:layout_marginEnd="6dp"
                        app:tint="#FFFFFF" />

                    <!-- Medicine text (white) -->
                    <TextView
                        android:id="@+id/tvStepsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/black"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:includeFontPadding="false"/>
                </LinearLayout>
            </FrameLayout>

            <!-- Value text -->
            <TextView
                android:id="@+id/tvStepsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6,040"
                android:textColor="#1A1A1A"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>