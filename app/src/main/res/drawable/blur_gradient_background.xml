<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base semi-transparent background for blur effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00DCD7D7"/>
        </shape>
    </item>

    <!-- Gradient overlay: More blurred (darker) at bottom, lighter at top -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:endColor="#00FFFFFF"
               android:centerColor="#BFFFFFFF"
                android:startColor="#FFFFFF"
                />
        </shape>
    </item>
</layer-list>