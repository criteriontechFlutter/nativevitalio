<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer with radial gradient -->
    <item android:top="1dp" android:left="1dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50dp"
                android:centerColor="#40000000"
                android:endColor="#00000000"
                android:startColor="#60000000" />
        </shape>
    </item>
    <!-- Main circle with radial gradient -->
    <item android:bottom="2dp" android:right="2dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="100dp"
                android:centerColor="#0066CC"
                android:endColor="#002244"
                android:startColor="#004087" />
        </shape>
    </item>
</layer-list>