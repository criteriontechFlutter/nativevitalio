<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient stroke background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#05BAC9"
                android:endColor="#1153C9"
                android:type="linear" />
            <corners android:radius="14dp" />
        </shape>
    </item>

    <!-- Inner white or transparent fill to create stroke effect -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Replace with @android:color/transparent if needed -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
