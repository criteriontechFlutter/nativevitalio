<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BloodGroupButton">
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:layout_height">@dimen/_60sdp</item>
        <item name="android:background">@drawable/blood_group_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>
    <style name="CircleFAB">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="FullScreenBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/FullScreenBottomSheet</item>
    </style>

    <style name="FullScreenBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FullScreenBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="shapeAppearanceOverlay">@style/BottomSheetShapeStyle</item>
    </style>

    <style name="BottomSheetShapeStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/start_blue</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="EditTextNumberInputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">15dp</item>
        <item name="android:digits">0123456789</item>
        <item name="android:inputType">textVisiblePassword|textCapCharacters</item>
        <item name="android:imeOptions">actionDone</item>
    </style>
    <style name="TextViewCalendarInputStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="PopupFadeScaleAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="StyledInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_input_field</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:foregroundTint">#999999</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>




    <style name="BottomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>




    <style name="CropImageActivityTheme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
    </style>





    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet.Rounded</item>
    </style>

    <style name="BottomSheet.Rounded" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/RoundedCorners</item>
    </style>

    <style name="RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>
    <style name="Widget.MyApp.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_selected</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="SeverityButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">#F0F0F0</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SeverityButton.Selected">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_selected_severity</item>
        <item name="android:textColor">#1E63F5</item>
    </style>


    <!-- In res/values/styles.xml -->
    <style name="GenderOption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/gender_card_selected</item>
    </style>

    <style name="GenderLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#111111</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>


    <style name="CheckBoxFamily">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">#CCCCCC</item>
        <item name="android:textColor">#000000</item>
    </style>





    <style name="ChatGridButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="ChatChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipBackgroundColor">@color/primaryBlue</item>
        <item name="android:textSize">14sp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>



    <style name="VitalInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">#D3D8E2</item>
        <item name="android:maxLength">5</item>
        <item name="android:textSize">50sp</item>
        <item name="android:gravity">end</item>
        <item name="android:background">@android:color/transparent</item>
    </style>



    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_dialog_rounded</item>
    </style>
    <style name="DropdownItemStyle">
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="DayCircleStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#777E90</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_day_unselected</item>
        <item name="android:layout_margin">4dp</item>
    </style>
</resources>