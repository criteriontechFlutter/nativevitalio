<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BloodGroupButton">
        <item name="android:layout_width">@dimen/_60sdp</item>
        <item name="android:layout_height">@dimen/_60sdp</item>
        <item name="android:background">@drawable/blood_group_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>



    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/start_blue</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="EditTextNumberInputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">15dp</item>
        <item name="android:digits">0123456789</item>
        <item name="android:inputType">textVisiblePassword|textCapCharacters</item>
        <item name="android:imeOptions">actionDone</item>
    </style>
    <style name="TextViewCalendarInputStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">15dp</item>
    </style>


    <style name="StyledInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_input_field</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:foregroundTint">#999999</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>




    <style name="BottomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>




    <style name="CropImageActivityTheme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
    </style>
</resources>